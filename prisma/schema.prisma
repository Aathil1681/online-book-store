generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String   @unique
  password String
  role     String   @default("user") // "admin" or "user"
  createdAt DateTime @default(now())
}

model Book {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  title      String
  author     String
  price      Float
  image      String
  featured   Boolean  @default(false)
  categoryId String   // Manually store ObjectId of the category
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Category {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  name  String
}
